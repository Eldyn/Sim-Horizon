{
    "namespace": "horizon",
    //put ui anims on the top pls
    "anim_in_alert_glyph": {
        "anim_type": "offset",
        "duration": 0.5,
        "from": [
            50,
            -270
        ],
        "to": [
            0,
            -270
        ],
        "next": "@horizon.anim_wait_alert_glyph"
    },
    "anim_wait_alert_glyph": {
        "anim_type": "wait",
        "duration": 5,
        "next": "@horizon.anim_out_alert_glyph"
    },
    "anim_out_alert_glyph": {
        "anim_type": "offset",
        "duration": 0.5,
        "from": [
            0,
            -280
        ],
        "to": [
            50,
            -280
        ],
        "destroy_at_end": "@hud.horizon_alert_panel"
    },
    "anim_in_alert_bg": {
        "anim_type": "offset",
        "duration": 0.5,
        "from": [
            50,
            0
        ],
        "to": [
            0,
            0
        ],
        "next": "@horizon.anim_wait_alert_bg"
    },
    "anim_wait_alert_bg": {
        "anim_type": "wait",
        "duration": 5,
        "next": "@horizon.anim_out_alert_bg"
    },
    "anim_out_alert_bg": {
        "anim_type": "offset",
        "duration": 0.5,
        "from": [
            0,
            -280
        ],
        "to": [
            50,
            -280
        ],
        "destroy_at_end": "@hud.horizon_alert_panel"
    },
    "anim_in_alert": {
        "anim_type": "offset",
        "duration": 0.5,
        "from": [
            50,
            -275
        ],
        "to": [
            -5,
            -275
        ],
        "next": "@horizon.anim_wait_alert"
    },
    "anim_wait_alert": {
        "anim_type": "wait",
        "duration": 5,
        "next": "@horizon.anim_oout_alert"
    },
    "anim_oout_alert": {
        "anim_type": "offset",
        "duration": 0.5,
        "from": [
            -5,
            -275
        ],
        "to": [
            50,
            -275
        ],
        "destroy_at_end": "@hud.horizon_alert_panel"
    },
    "anim_alpha_in_alert": {
        "anim_type": "alpha",
        "from": 0,
        "to": 1,
        "duration": 0.6,
        "next": "@horizon.anim_alpha_wait_alert"
    },
    "anim_alpha_wait_alert": {
        "anim_type": "wait",
        "duration": 5,
        "next": "@horizon.anim_alpha_out_alert"
    },
    "anim_alpha_out_alert": {
        "anim_type": "alpha",
        "from": 1,
        "to": 0,
        "duration": 1
    },
    //put here all the ui elements!
    "horizon_toptext_panel": {
        "type": "panel",
        "size": [
            "100%",
            260
        ],
        "controls": [
            {
                "horizon_toptext": {
                    "anchor_from": "top_middle",
                    "anchor_to": "top_middle",
                    "offset": [
                        0,
                        0
                    ],
                    "type": "label",
                    "shadow": true,
                    "text": "#filteredtext",
                    "text_alignment": "center",
                    "bindings": [
                        {
                            "binding_name": "#hud_title_text_string"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(#hud_title_text_string - (#hud_title_text_string - $default_prefix) > '')",
                            "target_property_name": "#visible"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(#hud_title_text_string - $default_prefix)",
                            "target_property_name": "#filteredtext"
                        }
                    ]
                }
            }
        ]
    },
    "horizon_title_panel": {
        "type": "panel",
        "size": [
            "100%",
            "100%cm"
        ],
        "controls": [
            {
                "horizon_title": {
                    "offset": [
                        0,
                        -160
                    ],
                    "anchor_to": "top_middle",
                    "anchor_from": "top_middle",
                    "type": "label",
                    "text_alignment": "center",
                    "shadow": true,
                    "font_size": "large",
                    "text": "#newtext",
                    "$title_prefix|default": "TITLE",
                    "bindings": [
                        {
                            "binding_name": "#hud_title_text_string"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(#hud_title_text_string - (#hud_title_text_string - $title_prefix) > '')",
                            "target_property_name": "#visible"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(#hud_title_text_string - $title_prefix)",
                            "target_property_name": "#newtext"
                        }
                    ]
                }
            }
        ]
    },
    "horizon_alert_panel": {
        "type": "panel",
        "size": [
            "100%",
            "100%cm"
        ],
        "controls": [
            {
                "horizon_alert_background": {
                    "layer": 1,
                    "alpha": "@horizon.anim_alpha_in_alert",
                    "offset": "@horizon.anim_in_alert_bg",
                    "type": "image",
                    "anchor_from": "top_right",
                    "anchor_to": "bottom_right",
                    "texture": "textures/ui/alert_display",
                    "size": [
                        "100%cm + 55px",
                        "100%cm + 15px"
                    ],
                    "bindings": [
                        {
                            "binding_name": "#hud_title_text_string"
                        },
                        {
                            "binding_type": "view",
                            "source_property_name": "(#hud_title_text_string - (#hud_title_text_string - $alert_prefix) > '')",
                            "target_property_name": "#visible"
                        }
                    ],
                    "controls": [
                        {
                            "horizon_alert_glyph": {
                                "type": "label",
                                "offset": [
                                    "-40% + 5px",
                                    0
                                ],
                                "layer": 3,
                                "text": "#alertglyph",
                                "text_alignment": "left",
                                "bindings": [
                                    {
                                        "binding_name": "#hud_subtitle_text_string"
                                    },
                                    {
                                        "binding_type": "view",
                                        "source_property_name": "(#hud_subtitle_text_string - (#hud_subtitle_text_string - $alert_prefix) > '')",
                                        "target_property_name": "#visible"
                                    },
                                    {
                                        "binding_type": "view",
                                        "source_property_name": "(#hud_subtitle_text_string - $alert_prefix)",
                                        "target_property_name": "#alertglyph"
                                    }
                                ]
                            }
                        },
                        {
                            "horizon_alert_text": {
                                "anchor_from": "center",
                                "anchor_to": "left_middle",
                                "offset": [
                                    "-25%",
                                    0
                                ],
                                "type": "label",
                                "shadow": true,
                                "layer": 2,
                                "text": "#alerttext",
                                "text_alignment": "left",
                                "bindings": [
                                    {
                                        "binding_name": "#hud_title_text_string"
                                    },
                                    {
                                        "binding_type": "view",
                                        "source_property_name": "(#hud_title_text_string - (#hud_title_text_string - $alert_prefix) > '')",
                                        "target_property_name": "#visible"
                                    },
                                    {
                                        "binding_type": "view",
                                        "source_property_name": "(#hud_title_text_string - $alert_prefix)",
                                        "target_property_name": "#alerttext"
                                    }
                                ]
                            }
                        }
                    ]
                }
            }
        ]
    }
}