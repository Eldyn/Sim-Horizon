{
	"namespace": "spmax_npc_bottom_action",
	"screen_content": {
		"type": "panel",
		"controls": [
			{
				"menu_screen": {
					"type": "panel",
					"size": [
						"60%",
						"75px"
					],
					"anchor_from": "bottom_middle",
					"anchor_to": "bottom_middle",
					"offset": [
						0,
						"-25px"
					],
					"controls": [
						{
							"background": {
								"layer": 0,
								"type": "image",
								"texture": "textures/ui/dark_npc_panel_bg",
								"size": [
									"100% + 6px",
									"100% + 16px"
								],
								"offset": [
									0,
									-5
								],
								"controls": [
									{
										"background_background": {
											"layer": 1,
											"type": "image",
											"texture": "textures/ui/dark_npc_panel",
											"size": [
												"100% - 6px",
												"100% - 16px"
											],
											"offset": [
												0,
												5
											]
										}
									}
								]
							}
						},
						{
							"close_button@npc_interact.close_button_holder": {
								"offset": [
									0,
									21
								]
							}
						},
						{
							"menu_title@common_dialogs.standard_title_label": {
								"$text_name": "#title_text",
								"anchor_from": "top_middle",
								"anchor_to": "top_middle",
								"offset": [
									0,
									"-10%-12px"
								],
								"color": "white",
								"bindings": [
									{
										"binding_name": "#title_text"
									},
									{
										"binding_type": "view",
										"source_property_name": "(#title_text > '')",
										"target_property_name": "#visible"
									}
								]
							}
						},
						{
							"dialog_message": {
								"layer": 3,
								"type": "label",
								"text_alignment": "center",
								"size": [
									"100%-16px",
									"default"
								],
								"anchor_from": "center",
								"anchor_to": "center",
								"offset": [
									0,
									"-15%"
								],
								"text": "#newdialogtext",
								"bindings": [
									{
										"binding_name": "#dialogtext"
									},
									{
										"binding_type": "view",
										"source_property_name": "(#dialogtext - $dialog_prefix > '')",
										"target_property_name": "#visible"
									},
									{
										"binding_type": "view",
										"source_property_name": "(#dialogtext - $dialog_prefix)",
										"target_property_name": "#newdialogtext"
									}
								]
							}
						},
						{
							"student_buttons": {
								"type": "stack_panel",
								"anchor_from": "bottom_middle",
								"anchor_to": "bottom_middle",
								"orientation": "horizontal",
								"size": [
									"100%",
									"20px"
								],
								"offset": [
									"2%",
									-8
								],
								"collection_name": "student_buttons_collection",
								"controls": [
									{
										"0@spmax_customnpcs_common.student_button": {
											"size": [
												"fill",
												"100%"
											],
											"collection_index": 0
										}
									},
									{
										"button_padding": {
											"type": "panel",
											"size": [
												5,
												0
											]
										}
									},
									{
										"1@spmax_customnpcs_common.student_button": {
											"size": [
												"fill",
												"100%"
											],
